<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_lead_scoring" model="ir.module.category">
            <field name="name">Lead Scoring</field>
            <field name="description">User access levels for the Lead Scoring module</field>
            <field name="sequence">15</field>
        </record>

        <record id="group_lead_score_rm" model="res.groups">
            <field name="name">Lead RM</field>
            <field name="category_id" ref="module_category_lead_scoring"/>
        </record>

        <record id="group_lead_score_manager" model="res.groups">
            <field name="name">Lead Manager</field>
            <field name="category_id" ref="module_category_lead_scoring"/>
            <field name="implied_ids" eval="[(4, ref('group_lead_score_rm'))]"/>
        </record>

        <record id="lead_score_rm_read_rule" model="ir.rule">
            <field name="name">Lead RM Own and Actionable Leads</field>
            <field name="model_id" ref="model_lead_score"/>
            <field name="domain_force"> [('assigned_rm_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_lead_score_rm'))]"/>
        </record>

        <record id="lead_score_manager_all_rule" model="ir.rule">
            <field name="name">Lead Manager All Leads</field>
            <field name="model_id" ref="model_lead_score"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_lead_score_manager'))]"/>
        </record>
    </data>
</odoo>