<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lead_import_wizard_view_form" model="ir.ui.view">
        <field name="name">lead.import.wizard.form</field>
        <field name="model">lead.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Leads from CSV">
                <group>
                    <field name="csv_file" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_import_leads" string="Import Leads" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    

    <record id="action_lead_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Leads from CSV</field>
        <field name="res_model">lead.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="lead_import_menu"
              name="Import Leads"
              parent="lead_score_menu_main"
              action="action_lead_import_wizard"
              sequence="100"/>

</odoo>