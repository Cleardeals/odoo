<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lead_score_view_search" model="ir.ui.view">
        <field name="name">lead.score.search</field>
        <field name="model">lead.score</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="assigned_rm_id"/>
                <field name="project_name"/>
                <field name="next_follow_up_date"/>
                <field name="write_date"/> <!-- Added for date-based filtering -->
                <field name="create_date"/> <!-- Added for date-based filtering -->
                <filter name="actionable_today" string="Actionable Today" 
                        domain="[('is_actionable_today', '=', True), ('current_status', '!=', 'option_not_matching_requirements'), ('current_status', '!=', 'no_requirements'),('predicted_score', '>=', 0.3)]"
                        help="Leads that need follow-up today or are overdue"/>
                <filter name="future_follow_up" string="Future Follow-ups" 
                        domain="[('is_actionable_today', '=', False), ('current_status', '!=', 'option_not_matching_requirements'), ('current_status', '!=', 'no_requirements'),('predicted_score', '>=', 0.3)]"
                        help="Leads scheduled for future follow-up"/>
                <filter name="recently_updated" string="Recently Updated"
                        domain="[('write_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"
                        help="Leads updated in the last 7 days"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_rm" string="Assigned RM" context="{'group_by': 'assigned_rm_id'}"/>
                    <filter name="group_by_state" string="Current Status" context="{'group_by': 'current_status'}"/>
                    <filter name="group_by_follow_up" string="Follow-up Date" context="{'group_by': 'next_follow_up_date'}"/>
                    <filter name="group_by_write_date" string="Last Updated" context="{'group_by': 'write_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="lead_score_view_kanban" model="ir.ui.view">
        <field name="name">lead.score.kanban</field>
        <field name="model">lead.score</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" default_order="write_date desc, predicted_score desc">
                <field name="predicted_score"/>
                <field name="assigned_rm_id"/>
                <field name="name"/>
                <field name="next_follow_up_date"/>
                <field name="is_actionable_today"/>
                <field name="whatsapp_response_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Score: <field name="predicted_score" widget="float"/></div>
                                <div class="text-muted"><field name="assigned_rm_id"/></div>
                                <div t-if="record.next_follow_up_date.raw_value" class="text-muted">
                                    <i class="fa fa-calendar" title="Follow-up Date"/>
                                    <field name="next_follow_up_date"/>
                                </div>
                                <div t-if="record.is_actionable_today.raw_value" class="mt-1">
                                    <span class="badge badge-warning">Action Required</span>
                                </div>
                                <div t-if="record.whatsapp_response_count.raw_value" class="mt-1">
                                    <span class="badge badge-info">
                                        <field name="whatsapp_response_count"/> Responses
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="lead_score_view_list" model="ir.ui.view">
        <field name="name">lead.score.list</field>
        <field name="model">lead.score</field>
        <field name="arch" type="xml">
            <list string="Leads" default_order="write_date desc, predicted_score desc">
                <control>
                    <button name="%(action_open_lead_score_bq_wizard)d"
                            string="Import from BigQuery"
                            type="action"
                            class="oe_highlight"/>
                </control>
                <field name="name"/>
                <field name="predicted_score"/>
                <field name="current_status"/>
                <field name="project_name"/>
                <field name="assigned_rm_id"/>
                <field name="site_visit_scheduled_date"/>
                <!--<field name="next_follow_up_date"/>-->
                <field name="whatsapp_response_count" string="Responses"/>
                <field name="is_actionable_today" string="Action Required" 
                       widget="boolean_toggle" 
                       readonly="1"
                       decoration-warning="is_actionable_today == True"/>
                <field name="write_date" string="Last Updated"/> <!-- Added for visibility -->
            </list>
        </field>
    </record>

    <record id="lead_score_view_form" model="ir.ui.view">
        <field name="name">lead.score.form</field>
        <field name="model">lead.score</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="current_status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="alert alert-warning" role="alert" invisible="not is_actionable_today">
                        <i class="fa fa-warning"/> This lead requires follow-up action today or is overdue!
                    </div>
                    <div class="oe_title"><h1><field name="name" placeholder="Lead Name..."/></h1></div>
                    <group>
                        <group>
                            <field name="assigned_rm_id"/>
                            <field name="standardized_phone"/>
                            <field name="predicted_score"/>
                        </group>
                        <group>
                            <field name="current_status"/>
                            <field name="next_follow_up_date"/>
                            <field name="is_actionable_today" invisible="1"/>
                            <field name="site_visit_scheduled_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Property Details">
                            <group>
                                <field name="project_name"/>
                                <field name="property_type"/>
                                <field name="property_tag"/>
                                <field name="property_address"/>
                                <field name="bhk"/>
                                <field name="price_range"/>
                                <field name="carpet_area"/>
                            </group>
                        </page>
                        <page string="Feedback">
                            <field name="feedback"/>
                        </page>
                        <page string="WhatsApp Responses">
                            <field name="whatsapp_response_ids" 
                                   readonly="1"
                                   context="{'tree_view_ref': 'leads.whatsapp_response_view_list'}">
                                <list>
                                    <field name="response_date" widget="datetime"/>
                                    <field name="lead_name"/>
                                    <field name="number"/>
                                    <field name="response"/>
                                    <field name="response_type" widget="badge" 
                                           decoration-success="response_type == 'positive'"
                                           decoration-danger="response_type == 'negative'"
                                           decoration-info="response_type == 'neutral'"/>
                                    <field name="project_name" optional="show"/>
                                    <field name="bhk" optional="show"/>
                                    <field name="predicted_score" widget="percentage" optional="show"/>
                                    <field name="assigned_rm_id"/>
                                    <field name="is_processed" widget="boolean_toggle"/>
                                    <button name="action_process_response" 
                                            type="object" 
                                            string="Process" 
                                            class="btn-primary"
                                            invisible="[('is_processed', '=', True)]"/>
                                </list>
                            </field>
                            <div class="o_view_nocontent_empty_folder" 
                                 invisible="[('whatsapp_response_count', '!=', 0)]">
                                <p>No WhatsApp responses for this lead.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lead_score_action_rm" model="ir.actions.act_window">
        <field name="name">My Actionable Leads</field>
        <field name="res_model">lead.score</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{
            'search_default_my_leads': 1,
            'search_default_actionable_today': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No actionable leads for today
            </p>
            <p>
                Leads that require follow-up will appear here when their follow-up date arrives.
            </p>
        </field>
    </record>

    <record id="lead_score_action" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">lead.score</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>