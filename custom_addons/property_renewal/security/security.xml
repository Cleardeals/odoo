<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_property_renewal" model="ir.module.category">
            <field name="name">Property Renewal</field>
            <field name="description">User access levels for the Property Renewal module</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_renewal_rm" model="res.groups">
            <field name="name">RM (Read-Only)</field>
            <field name="category_id" ref="module_category_property_renewal"/>
        </record>

        <record id="group_renewal_manager" model="res.groups">
            <field name="name">Manager (Full Access)</field>
            <field name="category_id" ref="module_category_property_renewal"/>
            <field name="implied_ids" eval="[(4, ref('group_renewal_rm'))]"/>
        </record>

        <record id="renewal_message_rm_rule" model="ir.rule">
            <field name="name">Renewal Message: RM can see own records</field>
            <field name="model_id" ref="model_renewal_message"/>
            <field name="domain_force">[('assigned_rm_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_renewal_rm'))]"/>
        </record>

        <record id="renewal_message_manager_rule" model="ir.rule">
            <field name="name">Renewal Message: Manager can see all records</field>
            <field name="model_id" ref="model_renewal_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renewal_manager'))]"/>
        </record>

    </data>
</odoo>